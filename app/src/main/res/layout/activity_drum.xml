<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F10">

    <!-- ðŸ”¹ Studio background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"/>

    <!-- ðŸ¥ Drum kit background (same image, better presentation) -->
    <ImageView
        android:id="@+id/drumBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/drum"
        android:elevation="6dp"/>

    <!-- ðŸ”¸ Snare (UNCHANGED) -->
    <View
        android:id="@+id/snare"
        android:layout_width="193dp"
        android:layout_height="120dp"
        android:layout_gravity="right"
        android:layout_marginTop="200dp"
        android:background="@android:color/transparent" />

    <!-- ðŸ”¸ Kick (UNCHANGED) -->
    <View
        android:id="@+id/kick"
        android:layout_width="125dp"
        android:layout_height="140dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="270dp"
        android:background="@android:color/transparent" />

    <!-- ðŸ”¸ Kick 2 (UNCHANGED) -->
    <View
        android:id="@+id/kick2"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_gravity="bottom|left"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="270dp"
        android:background="@android:color/transparent" />

    <!-- ðŸ”¸ Hi-hat (UNCHANGED) -->
    <View
        android:id="@+id/hihat"
        android:layout_width="120dp"
        android:layout_height="119dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/transparent" />

    <!-- ðŸ”¸ Crash (UNCHANGED) -->
    <View
        android:id="@+id/crash"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/transparent" />

    <!-- ðŸ”¸ Tom (UNCHANGED) -->
    <View
        android:id="@+id/tom"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/transparent" />

    <!-- ðŸŽ› Top studio bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:background="#181818"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio Drums"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- ðŸŽš Bottom UX hint -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap drums to play beats"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- ðŸŒ‘ Subtle vignette (designer touch) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22000000"/>
</FrameLayout>
